{
    "name": "your-company/blacklist-management",
    "description": "IP Blacklist Management System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@company.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "phpoffice/phpspreadsheet": "^1.29",
        "symfony/polyfill-mbstring": "^1.23"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('data')) { mkdir('data', 0755, true); }\"",
            "@php -r \"if (!file_exists('data/output')) { mkdir('data/output', 0755, true); }\""
        ]
    }
}
